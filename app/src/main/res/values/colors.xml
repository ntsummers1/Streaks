<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- New Color Scheme -->
    <color name="color_primary">#3f51b5</color>
    <color name="color_primary_variant">#002984</color>
    <color name="color_secondary">@color/white</color>
    <color name="color_secondary_variant">@color/white</color>
    <color name="color_primary_dark">@android:color/black</color>

    <!--colorBackground appears behind scrollable content and is used for the default window-->
    <!--background. colorSurface is mapped to the surface of components such as cards, sheets-->
    <!--and menus. colorError is used to indicate an error state for components such as-->
    <!--text fields.-->
    <color name="color_background">@color/background</color>
    <color name="color_surface">@color/white</color>
    <color name="color_error">@color/error</color>

    <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
    <!--on which they appear.-->
    <color name="color_on_primary">@color/white</color>
    <color name="color_on_secondary">@android:color/black</color>
    <color name="color_on_background">@android:color/black</color>
    <color name="color_on_surface">@android:color/black</color>
    <color name="color_on_error">@color/white</color>


    <!-- Dark Version Main Colors -->
    <color name="color_primary_night">@android:color/white</color>
    <color name="color_primary_variant_night">@android:color/white</color>
    <color name="color_secondary_night">@android:color/black</color>
    <color name="color_secondary_variant_night">@android:color/black</color>
    <color name="color_primary_dark_night">@android:color/black</color>

    <!--colorBackground appears behind scrollable content and is used for the default window-->
    <!--background. colorSurface is mapped to the surface of components such as cards, sheets-->
    <!--and menus. colorError is used to indicate an error state for components such as-->
    <!--text fields.-->
    <color name="color_background_night">@color/background_night</color>
    <color name="color_surface_night">@color/white</color>
    <color name="color_error_night">@color/error</color>

    <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
    <!--on which they appear.-->
    <color name="color_on_primary_night">@color/white</color>
    <color name="color_on_secondary_night">@color/white</color>
    <color name="color_on_background_night">@color/white</color>
    <color name="color_on_surface_night">@color/white</color>
    <color name="color_on_error_night">@color/white</color>

    <!-- Alert Colors -->
    <color name="error">#b00200</color>

    <!-- Background Colors -->
    <color name="background">#f9f9f9</color>
    <color name="background_night">#000000</color>
    <color name="date_background">#e5e5ea</color>
    <color name="date_background_night">#2f2f2f</color>
    <color name="white">#fff</color>

    <!-- Text Colors -->
    <color name="color_primary_text">@android:color/black</color>
    <color name="color_primary_text_night">@android:color/white</color>
    <color name="color_secondary_text">#8E8E93</color>
    <color name="color_secondary_text_night">#ccc</color>
</resources>
